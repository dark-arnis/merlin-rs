{{#*inline "title"}} Page: {{page.name}} {{/inline}} {{#*inline "header"}}
<h1>Page: {{#if page}}{{page.name}}{{else}}New!{{/if}}</h1>
<div>
    <a href="/">Index</a> ->
    <a href="/pages">Pages</a>
</div>
{{/inline}} {{#*inline "content"}}
<div id="main">
    <form action="/page" method="post">
        {{#if page}}
        <input type="hidden" value="{{page.name}}" name="name" /> {{else}}
        <input type="text" placeholder="Name" name="name" />
        <br/>{{/if}}
        <textarea rows=20 cols=100 name="text">{{page.text}}</textarea>
        <br/>
        <input type="submit" />
    </form>
</div>
{{/inline}} {{~> wrapper}}